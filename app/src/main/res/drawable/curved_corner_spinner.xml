<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <gradient android:angle="-90" android:endColor="@color/grey" android:startColor="@color/grey" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="3dip" android:topLeftRadius="3dip" />
            <gradient android:angle="0" android:endColor="@color/wheat" android:startColor="@color/wheat" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="3dip" android:topLeftRadius="3dip" />
            <gradient android:angle="0" android:endColor="@color/wheat" android:startColor="@color/wheat" />
        </shape>
    </item>
</selector>
